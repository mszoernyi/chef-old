{
  "name": "confluence",
  "description": "Atlassian Confluence",
  "override_attributes": {
    "backup": {
      "configs": {
        "confluence": {
          "source": "/var/lib/confluence"
        }
      }
    },
    "mysql": {
      "server": {
        "binlog_format": "row",
        "max_allowed_packet": "64M"
      }
    }
  },
  "run_list": [
    "recipe[mysql::server]",
    "recipe[mysql::backup]",
    "recipe[confluence]"
  ]
}
